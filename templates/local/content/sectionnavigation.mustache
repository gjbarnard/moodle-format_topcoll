{{!
    @template format_topcoll/local/content/sectionnavigation

    Displays the course section navigation.

    Example context (json):
    {
        "hasnext": true,
        "hasprevious": true,
        "previousname": "Section 6",
        "previousurl": "#",
        "nexturl": "#",
        "nextname": "Section 8",
        "rtl": false
    }
}}
<div class="section-navigation navigationtitle tc-selection-selector-container">
    <div class="tc-selection-selector-item prevsection">
        {{#hasprevious}}
        <a href="{{{previousurl}}}"{{#previoushidden}} class="dimmed_text"{{/previoushidden}}>
            <span class="fa-regular {{^rtl}}fa-circle-left{{/rtl}}{{#rtl}}fa-circle-right{{/rtl}} mr-1"></span>{{{previousname}}}
        </a>
        {{/hasprevious}}
    </div>
    <div class="tc-selection-selector-item nextsection">
        {{#hasnext}}
        <a href="{{{nexturl}}}"{{#nexthidden}} class="dimmed_text"{{/nexthidden}}>
            {{{nextname}}}<span class="fa-regular {{^rtl}}fa-circle-right{{/rtl}}{{#rtl}}fa-circle-left{{/rtl}} ml-1"></span>
        </a>
        {{/hasnext}}
    </div>
</div>
