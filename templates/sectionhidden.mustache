{{!
    @template format_topcoll/sectionhidden

    Collapsed Topics section hidden template.

    Context variables required for this template:
    * columnclass - Additional classes used when the format has a column layout.
    * columnlwidth - Column layout width.
    * heading - The heading.
    * leftcontent - Left column content.
    * nomtore - No mobile / tablet or editing.
    * rightcontent - Right column content.
    * rtl - Right to left?
    * sectionavailability - Section availability.
    * sectionid - Section id.
    * sectionno - Section number.
    * title - The title.

    Example context (json):
    {
        "columnclass": "col-lg-3",
        "columnwidth": "",
        "leftcontent": "1",
        "heading": '<h3 id="sectionid-124-title" class="section-title">Section 1</h3>',
        "nomtore": true,
        "rightcontent": "",
        "rtl": false,
        "sectionavailability": '<div class="section_availability"><div class="availabilityinfo ishidden"><span class="badge badge-info">Not available</span></div></div>',
        "sectionid": "124",
        "sectionno": "1",
        "title": "The hidden section",
        "toggleiconsize": "tc-medium"
    }
}}
<li id="section-{{sectionno}}" class="section main course-section clearfix hidden{{#columnclass}} {{columnclass}}{{/columnclass}}"{{#columnwidth}} style="width: {{columnwidth}}%;"{{/columnwidth}} role="region" aria-labelledby="sectionid-{{sectionid}}-title" data-sectionid="{{sectionno}}" data-for="section">
    {{#nomtore}}
    {{^rtl}}
        {{{leftcontent}}}
    {{/rtl}}
    {{#rtl}}
        {{{rightcontent}}}
    {{/rtl}}
    {{/nomtore}}
    <div class="content sectionhidden">
    {{#nomtore}}
        <div id="toggle-{{sectionno}}" class="sectionhead toggle">
            <span class="no_toggle {{toggleiconsize}}">
                {{{heading}}}
            </span>
        </div>
    {{/nomtore}}
    {{^nomtore}}
        <h3 id="sectionid-{{sectionid}}-title" class="section-title">{{{title}}}</h3>
    {{/nomtore}}
        {{{sectionavailability}}}
    {{#nomtore}}
    </div>
    {{^rtl}}
        {{{rightcontent}}}
    {{/rtl}}
    {{#rtl}}
        {{{leftcontent}}}
    {{/rtl}}
    {{/nomtore}}
</li>
